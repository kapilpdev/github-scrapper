<p style="color: green"><%= notice %></p>

<div class='row'>
  <div class="col-6">
    <%= form_tag(user_path, method: :get) do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Search users by title language star count...', class: "form-control" %>
      <%= submit_tag 'Search', class: "btn btn-dark" %>
    <% end %>
  </div>
</div>

<%= render @user %>

<div>
  <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger" %>
  <%= link_to "Back to users", users_path, class: "btn btn-dark" %>
</div>


<div id="repositories" class='mt-5'>
  <table class="table table-responsive table-bordered">
    <thead>
      <tr>
        <th>name</th>
        <th>url</th>
        <th>language</th>
        <th>Star count</th>
      </tr>
    </thead>
    <tbody>
      <% @repositories.each do |repository| %>
        <tr>
          <td><%=repository.title %></td>
          <td><%=repository.url %></td>
          <td><%=repository.language %></td>
          <td><%=repository.star_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @repositories %>
